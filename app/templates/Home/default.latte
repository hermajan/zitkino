{var $title="Program brněnských kin"}

{block #content}
<h1 class="page-header">{$title}</h1>
{import "../Cinema/list.latte"}

{foreach $cinemas as $cinemaItem}
<div class="panel panel-default">
	<div class="panel-heading">
		{include #cinemaListContent, cinema => $cinemaItem}
	</div>
	
	{var $movies = $cinemaItem->getSoonestMovies();}
	{include #movieList, movies => $movies, cinema => $cinemaItem}
</div>
{/foreach}
{/block}
